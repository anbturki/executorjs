{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "removeComments": false,
        "types": [
            "jest",
            "node"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "test",
        "examples"
    ]
}